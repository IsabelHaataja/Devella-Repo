@inject IJSRuntime JSRuntime

<div id="mainNavbar" class="navbar navbar-expand-lg navbar-light bg-white fixed-top shadow-sm" >
    <nav class="container-fluid">
        <a class="navbar-brand" href="/">          
            <img src="icons/Devella-logo-transparent.png" alt="Devella logo" height="65" />      
        </a>
        <div class="nav-item px-3">
            <ul class="navbar-nav ms-auto align-items-center gap-5">
                <li class="nav-item">
                    <NavLink class="nav-link text-dark" href="/for-companies">
                        För företag
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-dark" href="/for-developers">
                        För utvecklare
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-dark" href="/register">
                        Registrering
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-dark" href="/login">
                        Log In
                    </NavLink>
                </li>
            </ul>
        </div>
    </nav>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("setupNavbarScrollHandler");
        }
    }
}

