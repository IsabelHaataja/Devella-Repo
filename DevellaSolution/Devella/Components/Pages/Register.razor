@page "/register"
@using Devella.Components.Pages.Registration
<PageTitle>Register</PageTitle>

<section class="registration-container">
    <div class="registrer-title">
        <h2>Vad kul att du vill gå med i Devella!</h2>

        <h5>Vänligen välj typ av registrering</h5>
    </div>

    
    <div class="registration-btns">
        <button class="btn-primary-theme w-25" @onclick="OnDeveloperButtonClick">Utvecklare</button>
        <button class="btn-primary-theme w-25" @onclick="OnCompanyButtonClick">Företag</button>
    </div>


    @if (isDeveloper)
    {
        <div class="form-wrapper">
            <RegistrationFormDeveloperUser OnCancel="CancelForm" />
        </div>

    }
    @if (isCompany)
    {
        <div class="form-wrapper">
            <RegistrationFormCompanyUser OnCancel="CancelForm" />
        </div>
    }

</section>

@code {
    private bool isDeveloper = false;
    private bool isCompany = false;

    private void OnDeveloperButtonClick()
    {
        isDeveloper = true;
        isCompany = false;
    }

    private void OnCompanyButtonClick()
    {
        isCompany = true;
        isDeveloper = false;       
    }

    private void CancelForm()
    {
        isDeveloper = false;
        isCompany = false;
    }
}
